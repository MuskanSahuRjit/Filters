module moving_average_filter #(
    parameter N = 201,
    parameter DATA_WIDTH = 16
)(
    input wire clk,
    input wire reset,
    input wire signed [DATA_WIDTH-1:0] sample_in,
    output reg signed [DATA_WIDTH-1:0] avg_out
);

    reg signed [DATA_WIDTH-1:0] buffer [0:N-1];
    integer i;
    reg [7:0] index;
    reg signed [DATA_WIDTH+8:0] sum;

    always @(posedge clk or posedge reset) begin
        if (reset) begin
            for (i = 0; i < N; i = i + 1)
                buffer[i] <= 0;
            sum <= 0;
            avg_out <= 0;
            index <= 0;
        end else begin
            // Subtract oldest, add new sample to running sum
            sum <= sum - buffer[index] + sample_in;

            // Replace old sample in buffer
            buffer[index] <= sample_in;

            // Update index (circular)
            index <= (index == N-1) ? 0 : index + 1;

            // Output average
            avg_out <= sum / N;
        end
    end
endmodule
