`timescale 1ns / 1ps

module tb_fir_lms_filter;

    parameter DATA_WIDTH = 16;
    parameter COEFF_WIDTH = 16;

    reg clk;
    reg reset;
    reg signed [DATA_WIDTH-1:0] x_in;
    reg signed [DATA_WIDTH-1:0] d_in;
    wire signed [DATA_WIDTH-1:0] y_out;

    wire signed [COEFF_WIDTH-1:0] coeff0, coeff1, coeff2, coeff3;

    // Instantiate the DUT
    fir_lms_filter #(
        .DATA_WIDTH(DATA_WIDTH),
        .COEFF_WIDTH(COEFF_WIDTH),
        .TAP_NUM(4),
        .STEP_SIZE(16'd4)
    ) dut (
        .clk(clk),
        .reset(reset),
        .x_in(x_in),
        .d_in(d_in),
        .y_out(y_out),
        .coeff0(coeff0),
        .coeff1(coeff1),
        .coeff2(coeff2),
        .coeff3(coeff3)
    );

    // Clock generation
    always #5 clk = ~clk;

    integer i;

    initial begin
        $display("===== FIR LMS Adaptive Filter Testbench =====");
        clk = 0;
        reset = 1;
        x_in = 0;
        d_in = 0;

        #10 reset = 0;

        // Apply 20 input samples
        for (i = 0; i < 20; i = i + 1) begin
            x_in = (i < 10) ? 16'sd100 : 16'sd0;
            d_in = x_in + ($random % 20 - 10); // Add small noise
            #10;

            $display("Time=%0t | x_in=%d | d_in=%d | y_out=%d | Coeffs = [%d %d %d %d]",
                $time, x_in, d_in, y_out, coeff0, coeff1, coeff2, coeff3);
        end

        $finish;
    end

endmodule
